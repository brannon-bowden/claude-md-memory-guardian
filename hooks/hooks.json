{
  "SessionStart": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "cat CLAUDE.md 2>/dev/null || true",
          "statusMessage": "Loading CLAUDE.md rules"
        }
      ]
    }
  ],
  "UserPromptSubmit": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "sh \"${CLAUDE_PLUGIN_ROOT}/hooks/extract-core.sh\"",
          "statusMessage": "Injecting core rules"
        }
      ]
    }
  ],
  "Stop": [
    {
      "hooks": [
        {
          "type": "command",
          "command": "sh \"${CLAUDE_PLUGIN_ROOT}/hooks/check-signal.sh\"",
          "statusMessage": "Checking memory signal"
        }
      ]
    }
  ]
}
